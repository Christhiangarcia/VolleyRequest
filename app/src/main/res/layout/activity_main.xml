<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.volleyrequest.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/txtHeigth"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="71dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:hint="Heigth"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/txtWidth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtWidth"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txtWidth"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:layout_marginEnd="31dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Width"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toStartOf="@+id/txtHeigth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/btnCargar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="31dp"
        android:text="Cargar Imagen"
        app:layout_constraintStart_toStartOf="@+id/btnGray"
        app:layout_constraintTop_toBottomOf="@+id/btnSepia" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCargar"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="Categoria"
        app:layout_constraintEnd_toStartOf="@+id/btnGray"
        app:layout_constraintStart_toStartOf="@+id/btnGray"
        app:layout_constraintTop_toBottomOf="@+id/txtWidth" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="119dp"
        android:layout_height="44dp"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toStartOf="@+id/btnSepia"
        app:layout_constraintStart_toStartOf="@+id/btnSepia"
        app:layout_constraintTop_toBottomOf="@+id/txtHeigth" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="Filters"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnGray"
        app:layout_constraintEnd_toStartOf="@+id/btnGray" />

    <Button
        android:id="@+id/btnGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="35dp"
        android:text="Grayscale"
        app:layout_constraintEnd_toStartOf="@+id/btnSepia"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btnSepia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="78dp"
        android:text="Sepia"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnGray"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
